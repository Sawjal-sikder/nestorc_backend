# Django Configuration
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Database Configuration (SQLite - Default)
DATABASE_ENGINE=django.db.backends.sqlite3
DATABASE_NAME=db.sqlite3

# Database Configuration (PostgreSQL - Alternative)
# Uncomment these if you want to use PostgreSQL
# DATABASE_ENGINE=django.db.backends.postgresql
# DATABASE_NAME=your_database_name
# DATABASE_USER=your_database_user
# DATABASE_PASSWORD=your_database_password
# DATABASE_HOST=127.0.0.1
# DATABASE_PORT=5432

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# JWT Configuration
JWT_ACCESS_TOKEN_LIFETIME_DAYS=15
JWT_REFRESH_TOKEN_LIFETIME_DAYS=30
JWT_ROTATE_REFRESH_TOKENS=False
JWT_BLACKLIST_AFTER_ROTATION=True

# Social Authentication - Google
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Social Authentication - Apple
APPLE_CLIENT_ID=your-apple-client-id
APPLE_SECRET=your-apple-private-key
APPLE_KEY_ID=your-apple-key-id
APPLE_TEAM_ID=your-apple-team-id

# Redis/Celery Configuration
REDIS_URL=redis://localhost:6379
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# CORS Configuration
CORS_ALLOW_ALL_ORIGINS=True

# Static and Media Files
STATIC_URL=/static/
MEDIA_URL=/media/

# Site Configuration
SITE_ID=1

# Account Settings
ACCOUNT_EMAIL_VERIFICATION=mandatory
LOGIN_URL=/auth/login/
LOGOUT_URL=/auth/logout/
LOGIN_REDIRECT_URL=/
ACCOUNT_LOGOUT_REDIRECT_URL=/
ACCOUNT_SIGNUP_REDIRECT_URL=/accounts/email-verification-sent/

# Password Validation
MIN_PASSWORD_LENGTH=8
